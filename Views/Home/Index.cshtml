@model IEnumerable<Myapp.ViewModels.UserViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome!</h1>
    <p class="lead">Hello, @User.Identity.Name!</p>
</div>

<div class="container mt-4">
    <h2>User List</h2>
    <button id="addUserButton" class="btn btn-success mb-3">Add User</button>

    <table class="table table-bordered" id="userTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email ID</th> <!-- Updated header -->
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- User rows will be appended here by jQuery -->
        </tbody>
    </table>
</div>

<!-- Add jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function() {
        // Load users when the page loads
        loadUsers();

        // Function to load users via AJAX
        function loadUsers() {
            $.ajax({
                url: '/api/v1/users',
                type: 'GET',
                success: function(users) {
                    var rows = '';
                    users.forEach(function(user) {
                        rows += `<tr data-id="${user.id}">
                                    <td>${user.id}</td>
                                    <td><input type="text" value="${user.emailId}" class="form-control emailInput" /></td> <!-- Updated field -->
                                    <td>
                                        <button class="btn btn-primary saveButton">Save</button>
                                        <button class="btn btn-danger deleteButton">Delete</button>
                                    </td>
                                </tr>`;
                    });
                    $('#userTable tbody').html(rows);
                },
                error: function() {
                    alert('Failed to load users.');
                }
            });
        }

        // Save user
        $('#userTable').on('click', '.saveButton', function() {
            var row = $(this).closest('tr');
            var id = row.data('id');
            var emailId = row.find('.emailInput').val(); // Use emailInput class

            $.ajax({
                url: '/api/v1/users/' + id,
                type: 'PUT',
                contentType: 'application/json',
                data: JSON.stringify({ id: id, emailId: emailId }), // Update emailId
                success: function() {
                    alert('User updated successfully');
                },
                error: function() {
                    alert('Error updating user');
                }
            });
        });

        // Delete user
        $('#userTable').on('click', '.deleteButton', function() {
            var row = $(this).closest('tr');
            var id = row.data('id');

            $.ajax({
                url: '/api/v1/users/' + id,
                type: 'DELETE',
                success: function() {
                    row.remove();
                    alert('User deleted successfully');
                },
                error: function() {
                    alert('Error deleting user');
                }
            });
        });

        // Add user
        $('#addUserButton').click(function() {
            var emailId = prompt('Enter user email ID:'); // Updated prompt message
            if (emailId) {
                $.ajax({
                    url: '/api/v1/users',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ emailId: emailId }), // Send emailId
                    success: function(result) {
                        var newRow = `<tr data-id="${result.id}">
                                        <td>${result.id}</td>
                                        <td><input type="text" value="${result.emailId}" class="form-control emailInput" /></td> <!-- Updated field -->
                                        <td>
                                            <button class="btn btn-primary saveButton">Save</button>
                                            <button class="btn btn-danger deleteButton">Delete</button>
                                        </td>
                                      </tr>`;
                        $('#userTable tbody').append(newRow);
                    },
                    error: function() {
                        alert('Error adding user');
                    }
                });
            }
        });
    });
</script>
